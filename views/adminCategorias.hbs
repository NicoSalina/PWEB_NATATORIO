<div class="container">
  <a href="/admin"><button class="btn btn-secondary my-4">Volver</button></a>
  <h1>CATEGORIAS</h1>
  <div class="row">
    <a href="/admin/categorias/create" class="btn btn-info my-4">Agregar Categorias</a>
    <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Nombre</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          {{#each categorias}}
          <tr>
            <th scope="row"> {{id}} </th>
            <td> {{nombre}} </td>
            <td> 
              <a href="/admin/categorias/delete/{{id}}" class="btn btn-danger">
                eliminar
              </a>
              <a href="/admin/categorias/update/{{id}}" class="btn btn-warning">
                editar
              </a>
            </td>
          </tr>
        {{/each}}
        </tbody>
    </table>
  </div>
</div>

