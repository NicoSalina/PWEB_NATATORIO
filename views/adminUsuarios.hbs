<div class="container">
  <a href="/admin"><button class="btn btn-secondary my-4">Volver</button></a>
  <h1>USUARIOS</h1>
  <div class="row my-5">
    <table class="table">
        <thead>
          <tr>
            <th scope="col">id</th>
            <th scope="col">Nombre</th>
            <th scope="col">Email</th>
            <th scope="col">Rol</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {{#each users}}
          <tr>
            <th scope="row"> {{id}} </th>
            <td> {{name}} </td>
            <td> {{email}} </td>
            <td> {{rol}} </td>
            <td> <a href="/admin/usuarios/delete/{{id}}" class="btn btn-danger">
                eliminar
              </a>
              <a href="/admin/usuarios/update/{{id}}" class="btn btn-warning">
                editar
              </a> </td>
          </tr>
        {{/each}}
        </tbody> 
    </table>
  </div>
</div>